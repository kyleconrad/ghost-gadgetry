    <div class="bkg-image" style="background-image: url('{{@blog.cover}}');"></div>
</section>

<section id="post-container" class="padded">
  {{{body}}}
</section>

<footer class="padded">
    <span class="footer-text">
      All content &copy; 2013 <a href="{{@blog.url}}">{{@blog.title}}</a> &bull; All rights reserved.
    </span>
</footer>


<script type="text/javascript">
	head.ready(function(){
        // RESPONSIVE VIDEOS
        $('div, section, article').fitVids();

        // REPLACE SVG WITH PNG IF NO SUPPORT
        if(!Modernizr.svg) {
            $('img[src*="svg"]').attr('src', function() {
                return $(this).attr('src').replace('.svg', '.png');
            });
        }
	});
</script>

