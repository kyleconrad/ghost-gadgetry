<body>

<section id="left-bar">
    <a href="{{@blog.url}}/">
      <img src="{{@blog.logo}}">
    </a>

    <ul id="social-links">
        <li>
            <a href="#" target="_blank" class="icon-feed"></a>
        </li>
        <li>
            <a href="#" target="_blank" class="icon-twitter"></a>
